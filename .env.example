# Multi-Agent Tour Guide System
# Environment Configuration

# =============================================================================
# API KEYS (Required in production, not needed in mock mode)
# =============================================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Development mode (use mock agents and APIs)
# Set to "false" when ready for production
MOCK_MODE=true

# Timeouts (milliseconds)
AGENT_TIMEOUT_MS=5000
JUDGE_TIMEOUT_MS=3000
ROUTE_RETRIEVAL_TIMEOUT_MS=10000

# Concurrency settings
MAX_CONCURRENT_WAYPOINTS=5
MAX_AGENT_THREADS=50

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/tour-guide.log

# Log rotation settings
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE
# =============================================================================

# Enable result caching
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL_SECONDS=3600
